---
import { ArrowRight } from 'lucide-react';
const { bike } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden transform transition hover:scale-105">
  <a href={`/bike/${bike.id}`}>
    <img 
      src={bike.image} 
      alt={bike.name} 
      class="w-full h-48 object-cover"
    />
    <div class="p-4">
      <div class="flex justify-between items-center mb-2">
        <h3 class="text-xl font-semibold">{bike.name}</h3>
        <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
          {bike.type.replace('_', ' ')}
        </span>
      </div>
      <p class="text-gray-600 mb-4 line-clamp-2">{bike.description}</p>
      <div class="flex justify-between items-center">
        <span class="text-2xl font-bold">${bike.price.toLocaleString()}</span>
        <span class="flex items-center gap-2 text-blue-600 hover:text-blue-800">
          View Details
          <ArrowRight size={20} />
        </span>
      </div>
    </div>
  </a>
</div>